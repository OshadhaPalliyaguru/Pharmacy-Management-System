<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserFormController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <VBox>
                    <children>
                        <Label styleClass="header-label" text="Registered Users" textFill="#0d47a1">
                            <font>
                                <Font name="Segoe UI Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="List of system access accounts" textFill="#78909c" />
                    </children>
                </VBox>

                <TableView fx:id="tblusers" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colid" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colusername" prefWidth="150.0" text="Username" />
                        <TableColumn fx:id="colemail" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="colrole" prefWidth="100.0" text="Role" />
                        <TableColumn fx:id="colpassword" prefWidth="150.0" text="Password" />
                        <TableColumn fx:id="colcreated_at" prefWidth="150.0" text="Created At" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>