<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SalesFormController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <VBox>
                    <children>
                        <Label styleClass="header-label" text="Sales History" textFill="#0d47a1">
                            <font>
                                <Font name="Segoe UI Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="View past transactions and invoices" textFill="#78909c" />
                    </children>
                </VBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="ðŸ”" textFill="#90a4ae">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="txtSearch" promptText="Search by Invoice No or Cashier..." style="-fx-background-color: transparent; -fx-text-fill: #37474f;" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                </HBox>

                <TableView fx:id="tblSaless" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colid" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colinvoiceno" prefWidth="150.0" text="Invoice No" />
                        <TableColumn fx:id="colsaledate" prefWidth="180.0" text="Sale Date" />
                        <TableColumn fx:id="colcashier" prefWidth="120.0" text="Cashier" />
                        <TableColumn fx:id="coltotalamount" prefWidth="120.0" style="-fx-alignment: center-right;" text="Total Amount" />
                        <TableColumn fx:id="colCreatedAt" prefWidth="180.0" text="Record Created" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>