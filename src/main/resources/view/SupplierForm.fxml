<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SupplierFormController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <VBox>
                            <children>
                                <Label styleClass="header-label" text="Supplier Directory" textFill="#0d47a1">
                                    <font>
                                        <Font name="Segoe UI Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label text="Manage pharmaceutical distributors and contacts" textFill="#78909c" />
                            </children>
                        </VBox>
                        <AnchorPane HBox.hgrow="ALWAYS" />

                        <Button mnemonicParsing="false" onAction="#btnAddSuppliersOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: linear-gradient(to right, #1e88e5, #42a5f5); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(30,136,229,0.4), 10, 0, 0, 4);" text="+ Add New Supplier">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 2);">
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                    <children>
                        <Label text="ðŸ”" textFill="#90a4ae">
                            <font>
                                <Font size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="txtSearch" promptText="Search by Name, Email or ID..." style="-fx-background-color: transparent; -fx-text-fill: #37474f;" HBox.hgrow="ALWAYS">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                </HBox>

                <TableView fx:id="tblSuppliers" styleClass="table-view" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colid" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="colname" prefWidth="180.0" text="Company Name" />
                        <TableColumn fx:id="colPhoneno" prefWidth="120.0" text="Phone No" />
                        <TableColumn fx:id="colemail" prefWidth="180.0" text="Email Address" />
                        <TableColumn fx:id="colAddress" prefWidth="200.0" text="Address" />
                        <TableColumn fx:id="colcreatedat" prefWidth="120.0" text="Registered Date" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>